<UserControl x:Class="Library.LibraryMenu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Library"
             mc:Ignorable="d" 
             d:Background="White"
             d:DesignHeight="450" d:DesignWidth="800">


    <Grid Height="35" VerticalAlignment="Top"  Margin="15,0,15,0">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="90"/>
            <ColumnDefinition Width="90"/>
            <ColumnDefinition Width="90"/>
        </Grid.ColumnDefinitions>
        <TextBlock Grid.Column="0" Text="Библиотека" FontSize="18" FontWeight="Black"  Margin="0,5,0,0"/>
        
        <TextBlock Grid.Column="1" Text="Поиск" FontSize="14" TextAlignment="Center" FontWeight="SemiBold" Margin="0,7,0,0" 
                   MouseLeftButtonDown="SearchButton_Click" Cursor="Hand"/>

        <TextBlock Grid.Column="2" Text="Мои книги" FontSize="14" TextAlignment="Center" FontWeight="SemiBold" Margin="0,7,0,0" 
                   MouseLeftButtonDown="MyBooksButton_Click" Cursor="Hand"/>

        <TextBlock Grid.Column="3" Text="Аккаунт" FontSize="14" TextAlignment="Center" FontWeight="SemiBold" Margin="0,7,0,0" 
                   MouseLeftButtonDown="AccountButton_Click" Cursor="Hand"/>
        
    </Grid>
</UserControl>
