<Window x:Class="Library.LogInWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Library"
        mc:Ignorable="d"
        Title="Вход" Height="180" Width="415" ResizeMode="NoResize" WindowStartupLocation="CenterOwner">

    <StackPanel Margin="30,20,30,20">
        <TextBlock Text="Введите Ваш Email:" HorizontalAlignment="Left" TextAlignment="Left" FontSize="15" FontWeight="SemiBold"/>
        <TextBox Margin="0,8,0,20" Height="23"></TextBox>
        <Button Margin="120,0,120,0" Height="23">
            <TextBlock Text="Войти" FontSize="14" FontWeight="SemiBold" Margin="0,-3,0,0"/>
        </Button>
    </StackPanel>
</Window>
