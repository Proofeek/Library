<Page x:Class="Library.SearchPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Library"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="SearchPage">

    <Page.Resources>
        <DataTemplate x:Key="BookTemplate">

            <Grid Margin="25"  Width="600" Height="200" HorizontalAlignment="Left">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="150"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Image Grid.Column="0" Source="{Binding ImageUrl}" Margin="10"/>

                <StackPanel Grid.Column="1" Margin="10">
                    <TextBlock Text="{Binding Title}" FontWeight="Bold" FontSize="20"/>
                    <TextBlock Text="{Binding Author.ShortName}" FontSize="16"/>
                    <TextBlock Text="{Binding Genre.GenreName}" FontSize="16"/>
                    <!--<TextBlock Text="{Binding Annotation}" FontSize="12" TextWrapping="Wrap"/>-->
                    <TextBlock Text="{Binding YearPublished}" FontSize="16"/>
                    <!--<StackPanel Orientation="Horizontal">
                        <TextBlock Text="Publisher: " FontWeight="Bold"/>
                        <TextBlock Text="{Binding Publisher.PublisherName}"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Pages: " FontWeight="Bold"/>
                        <TextBlock Text="{Binding PageCount}"/>
                    </StackPanel>-->
                </StackPanel>

                <StackPanel Grid.Column="2" Margin="10">

                </StackPanel>
            </Grid>
        </DataTemplate>
    </Page.Resources>

    <Grid>
        <ListBox Grid.Row="2" Name="BooksListBox" ItemTemplate="{StaticResource BookTemplate}" SelectionChanged="BooksListBox_SelectionChanged"/>
    </Grid>
</Page>
