      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Library"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="SearchPage">

    <Grid>
        <ListBox Grid.Row="2" Name="BooksListBox" ItemTemplate="{StaticResource SimilarBook}" SelectionChanged="BooksListBox_SelectionChanged" ScrollViewer.CanContentScroll="False">
            
        </ListBox>
    </Grid>
</Page>
